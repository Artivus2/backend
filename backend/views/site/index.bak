<?php
$this->title = 'GREENAVI';

$files = scandir($_SERVER['DOCUMENT_ROOT'] . "/web/static");

foreach ($files as $file) {

    if (preg_match('/^[A-Za-z0-9]*\.js$/', $file)) {
        $this->registerJsFile('/web/react/' . $file, ['depends' => [AppAsset::className()], 'position' => View::POS_END]);
    }
}
if (is_dir($_SERVER['DOCUMENT_ROOT'] . "/web/static/js")) {
    $files = scandir($_SERVER['DOCUMENT_ROOT'] . "/web/static/js");

    foreach ($files as $file) {
        $this->registerJsFile('/web/static/js/' . $file, ['depends' => [AppAsset::className()], 'position' => View::POS_END]);
    }
}

if (is_dir($_SERVER['DOCUMENT_ROOT'] . "/web/static/css")) {
    $files = scandir($_SERVER['DOCUMENT_ROOT'] . "/web/static/css");

    foreach ($files as $file) {
        $this->registerCssFile('/vue/css/' . $file, ['depends' => [AppAsset::className()], 'position' => View::POS_END]);
    }
}
